<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title:`Estas editando: ${name}`}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%=name%></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label" >Nombre del producto:</label>
						<input value="<%=name%>" type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input  value="<%=price%>" type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input value="<%=discount%>" type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="categoryId" class="form-label">Categoría:</label>
						<select name="categoryId" id="categoryId" class="form-input">
							<% categories.forEach(category => { %>
								<option value="<%= category.id %>" <%= category.id===categoryId && 'select' %> ><%= category.name %></option>
							<% }) %>
							
							
							
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%=description%></textarea>
					</div>
					<div class="col-12">
						<label for="image" class="form-label">Cargar imagen:</label>
						<input type="file" name="image" class="buy-now-button">

						<button type="submit" class="buy-now-button">Guardar producto</button>

					</div>
					
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>